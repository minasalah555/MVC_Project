@model IEnumerable<University.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="get" action="@Url.Action("Index")">
    <div class="form-group">
        <label for="search">Search by Name:</label>
        <input type="text" id="search" name="search" class="d-md-inline-flex" />
    </div>
    <button type="submit" class="btn mybtn btn-primary">Search</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p>@ViewBag.ErrorMessage</p>
}

<br />
<br />

<a asp-controller="Course" asp-action="Create" class="btn btn-primary">Add New Course</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.course_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.course_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.semester)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.grade)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.course_credits)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.gpa)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.course_description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.semester)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.grade)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Instructor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_credits)
            </td>
          @*  <td>
                @Html.DisplayFor(modelItem => item.gpa)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.course_description)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.course_id">
                        <img src="~/Img/@item.Course_Pic" alt="Std_Image_Here"
                             style="border-radius:50%; width:70px;height:70px">
                    </a>

             </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.course_id">&nbsp Edit &nbsp</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.course_id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.course_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Back to Admin Home</a>
