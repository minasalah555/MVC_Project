@model IEnumerable<University.Models.Departments>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="get" action="@Url.Action("Index")">
    <div class="form-group">
        <label for="search">Search by Name:</label>
        <input type="text" id="search" name="search" class="d-md-inline-flex" />
    </div>
    <button type="submit" class="btn mybtn btn-primary">Search</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p>@ViewBag.ErrorMessage</p>
}

<br />
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Add New Department</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.department_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.department_Pic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department_name)
            </td>
            <td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id">
                        <img src="~/Img/@item.department_Pic" alt="Std_Image_Here"
                             style="border-radius:50%; width:70px;height:70px">
                    </a>
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.id">&nbsp Edit &nbsp</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Back to Admin Home</a>
