@model IEnumerable<University.Models.Assistant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<<form method="get" action="@Url.Action("Index")">
    <div class="form-group">
        <label for="search">Search by Name:</label>
        <input type="text" id="search" name="search" class="d-md-inline-flex" />
    </div>
    <button type="submit" class="btn mybtn btn-primary">Search</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p>@ViewBag.ErrorMessage</p>
}

<br />
<br />

<a asp-controller="Assistant" asp-action="Create" class="btn btn-primary">Add New Assistant</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.first_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.last_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contact_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assistant_Pic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contact_number)
            </td>

            <td>
                    <a asp-action="Details" asp-route-id="@item.assistant_id">
                        <img src="~/Img/@item.Assistant_Pic" alt="Std_Image_Here"
                             style="border-radius:50%; width:70px;height:70px">
                    </a>
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.department_id)

              </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.assistant_id">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.assistant_id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.assistant_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Back to Admin Home</a>
