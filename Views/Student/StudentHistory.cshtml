@{
}
@model List<Course>
<h1>college courses</h1>
<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card box-shadow p-1">
                    <div>
                        Title: @item.course_name
                    </div>
                    <img class="card-img-top" src="~/Img/@item.Course_Pic" />
                    <ul class="list-group">
                        <li class="list-group-item">Instructor: @item.Instructor</li>
                        <li class="list-group-item">Cred: @item.course_credits</li>

                        @*<td> <a asp-action="RemoveFromCart" asp-controller="Course" asp-route-id="@item.course_id" class="btn btn-primary">Remove from Cart</a></td>*@
                    </ul>
                </div>

            </div>
        }

    </div>
</div>